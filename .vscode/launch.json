{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch WpfMvvmApp (Debug)", // Nome descrittivo
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build", // Nome del task di compilazione (lo creeremo dopo)
            // *** PERCORSO CORRETTO BASATO SUL TUO INPUT ***
            "program": "C:\\Users\\Simone Benzi\\Documents\\Progetto App\\MyWpfApp\\WpfMvvmApp\\bin\\Debug\\net9.0-windows\\WpfMvvmApp.dll",
            // "${workspaceFolder}" si riferisce alla cartella principale del progetto (MyWpfApp)
            // Assicurati che il nome del file sia WpfMvvmApp.dll (o cambia se diverso)
            // ********************************************
            "args": [],
            "cwd": "${workspaceFolder}", // Directory di lavoro
            "stopAtEntry": false, // Non fermarti alla prima riga del codice .NET
            "console": "internalConsole", // Mostra output nella console di Debug
            "requireExactSource": false,
            "justMyCode": true,
            "launchBrowser": {
                "enabled": false // Non aprire un browser
            },
            "logging": {
                "moduleLoad": false // Non loggare ogni DLL caricata (meno rumore)
             }
        },
        {
            "name": ".NET Core Attach", // Lascia questa per 'Attach to Process'
            "type": "coreclr",
            "request": "attach"
        }
    ]
}
